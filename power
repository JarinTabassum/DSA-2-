//write a recursive program to calculate the power of x (x^y), where y is a non negative integer. 
#include<iostream>
using namespace std;
int power(int x,int y){
    if(y==0) return 1;
    else{
        return power(x,y-1)*x;
    }
}
int main(){
    int x,y;
    cout<<"Enter the numbers:"<<endl;
    cin>>x;
    cin>>y;
    int z=power(x,y);
    cout<<"Power of y="<<y<<" over x="<<x<<" is: "<<z;
}
